<h2 class="mt-5 text-primary" style="margin-left: 10px;">Add New Department</h2>

  <div class="container ">
    <div class="row justify-content-center">
      <div class="col-md-12">
        <div class="card">
          <div class="card-body p-5">
            <form action="/departments" method="post">
              <div class="form-group mb-2">
                <label for="name">Department Name</label>
                <input type="text" class="form-control" id="name" name="name"placeholder="Department Name" required>
              </div>
              <div class="form-group">
                <label for="code">Department Code</label>
                <input type="text" class="form-control" id="code" name="code"placeholder="Department Code" required>
              </div>
              <button type="submit" class="btn btn-block mt-3" style="width: 100%; border-radius: 10px; padding: 5px;">Add Department</button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <div class="row department-list">
      <div class="col">
        <h2 class="text-primary mb-5">Our Departments</h2>
      </div>
    </div>

    <div class="row">
      {{#each departments}}
      <div class="col-md-4">
        <div class="card department-card">
          <div class="card-body text-center">
            <h5 class="card-title">{{department_name}}</h5>
            <h5 class="card-title">({{department_code}})</h5>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>

  <!-- Bootstrap JS -->
