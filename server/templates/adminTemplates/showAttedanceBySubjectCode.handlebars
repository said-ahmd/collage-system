<!DOCTYPE html>
<html>
  <head>
    <title>Attendance Statement</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <style type="text/css">
      table {
        font-size: 1rem;
        width: 100%;
        table-layout: fixed;
        border-collapse: collapse;
        background-color: #f9f9f9; /* Add a background color */
        font-family: 'Montserrat', sans-serif; /* Use a custom font */
      }
      th, td {
        padding: 1rem;
        text-align: center;
      }
      th {
        position: sticky;
        top: 0;
        background-color: #fff;
        z-index: 1;
      }
      tbody tr:nth-child(even) {
        background-color: #fff;
        transition: background-color 0.2s ease-in-out; /* Use a hover effect */
      }
      tbody tr:hover {
        background-color: #f2f2f2;
      }
      .table-container {
        max-height: 500px;
        overflow-y: auto;
      }
      .icon-check {
        color: #28a745; /* Use a checkmark icon */
      }
      .fade-in {
        animation: fadeIn 0.5s ease-in-out;
      }
      @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1 class="my-4">{{CourseName}} Absence</h1>
      <div class="table-container">
        <table class="table table-striped fade-in"> <!-- Use a fade-in animation -->
          <thead>
            <tr>
              <th>#</th>
              <th>Academic Number</th>
              <th>Student Name</th>
              <th>Absent</th>
            </tr>
          </thead>
          <tbody>
            {{#each attendance}}
            <tr>
              <td>{{@index}}</td>
              <td>{{this.student_id}}</td>
              <td>{{this.student_name}}</td>
              <td>
                <div class="custom-control custom-checkbox">
                  <input type="checkbox" name="absent_{{@index}}" class="custom-control-input" id="absent_{{@index}}">
                  <label class="custom-control-label" for="absent_{{@index}}">
                    <i class="fas fa-check icon-check"></i> <!-- Use a checkmark icon -->
                  </label>
                </div>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
      <a href="/attedance">
        <button class="btn btn-primary">Submit</button>
      </a>
    </div>
    
    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/your_kit_id.js" crossorigin="anonymous"></script> <!-- Replace your_kit_id with your Font Awesome kit ID -->
  </body>
</html>