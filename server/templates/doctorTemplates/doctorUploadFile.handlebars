                    <a href="/ " style="margin-left: 100px;" id="second">Show Files</a>

                </div>
            </div>
        </div>
    </nav>
    <h1>Upload File</h1>
    <form action="/doctor/uploadfiles" method="post" enctype="multipart/form-data"  >
        <label for="doctor_id" style="font-size: large;">Doctor_id: </label>
        <input type="text" id="doctor_id" name="doctor_id" value="{{doctor_id}}"  style="border-radius: 20px;" readonly required>
        <br>
        <label for="course_code" style="font-size: large;">Course_code :</label>
        <input type="text" id="course_code" name="course_code" value="{{course_code}}" readonly style="border-radius: 20px;"required><br>
        <label for="uploadFile"style="font-size: large;">Upload_file :</label>
        <input type="file" name="file" id="uploadFile"  required><br> <br>
        <button type="submit" id="sub" style="border-radius: 10px;">Upload</button>
        <div style="color: green;">{{message}}</div> 

    </form>
</body>
