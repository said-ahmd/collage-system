            height: 100vh;
        }
        form {
            background-color: white;
            width: 400px;
           padding: 30px;
           border-radius: 20px;
           box-shadow: 0px 0px 10px rgba(77, 184, 226, 0.7);
            display: flex;
            flex-direction: column;
            margin-left: 35%;
            margin-top: 18px;
          
        }
 .label {
            font-size: large;
        }
        input[type="text"],
        input[type="file"] {
            border-radius: 20px;
            padding: 10px;
            border: none;
            box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }
        #sub {
            border-radius: 10px;
            padding: 10px 30px;
            background-color: rgb(173, 171, 169);
            color: white;
            border: none;
            font-size: large;
            cursor: pointer;
        }
        h1{
    text-align: center;
    color: rgb(252, 252, 252);
    background-color: rgb(13, 110, 253);
    font-family:Impact, 'Haettenschweiler', 'Arial Narrow Bold', sans-serif;
    margin-top: 0;
    padding: 20px;
            }
 </style>

